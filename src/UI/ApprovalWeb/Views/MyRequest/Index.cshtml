@model List<ApprovalRequestViewModel>

<h2 class="text-center my-4">Approval Request List</h2>

<div class="d-flex justify-content-end mb-4">
    <a href="/MyRequest/Create2" class="btn btn-primary shadow-sm">+ Submit New Request</a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center mb-0">
                <thead class="table-primary">
                    <tr>
                        <th style="width:30px">
                            <input type="checkbox" class="form-check-input">
                        </th>
                        <th style="width:500px">Title</th>
                        @* <th>Type</th> *@
                        <th style="width:200px">Created</th>
                        <th style="width:200px">Approved</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input">
                                </td>
                                <td class="text-start">
                                    <a href="/MyRequest/Details/@item.ApprovalId" class="fw-bold text-decoration-none text-dark">
                                        @item.RequestTitle
                                    </a>
                                </td>
                                @* <td>@item.ApprovalType</td> *@
                                <td>@item.RequestedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(item.RespondedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                                <td>
                                    <span class="badge @(item.Status switch {
                                        "Approved" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        _ => "bg-warning text-dark"
                                    })">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="/MyRequest/Details/@item.ApprovalId" class="btn btn-sm btn-outline-info shadow-sm">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">No approval requests found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
